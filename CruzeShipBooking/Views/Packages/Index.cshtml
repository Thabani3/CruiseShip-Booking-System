@model IEnumerable<CruzeShipBooking.Models.Package>

@{
    ViewBag.Title = "Index";
}


@foreach (var item in Model)
{
    
<div style="margin-top: 30px" class="col-xs-6">
    @if (item.Picture != null)
    {
        var base64 = Convert.ToBase64String(item.Picture);
        var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
       

        <div class="card" style="width: 18rem;">
            <img src="@ImgSource" width="300" height="300" />

            <div class="card-body">
                <h5 class="card-title">@item.PackageName</h5>
                <p class="card-text">@item.Description</p>
                <a href="#" class="btn btn-primary">Book Package</a>
            </div>
        </div>

    }
</div>
       
}