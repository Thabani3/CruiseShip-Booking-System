    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingType.BookingTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookingPackageDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackagePrice)
        </td>
        <td>
