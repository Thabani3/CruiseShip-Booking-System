    ViewBag.Title = "Index";
}

<h2>Booking Packages</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingType.BookingTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingPackageDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackagePrice)
